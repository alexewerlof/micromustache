{
  "name": "micromustache",
  "version": "6.1.1",
  "description": "A fast, minimal and secure template engine for JavaScript",
  "keywords": [
    "template",
    "mustache",
    "string processing",
    "string interpolation",
    "template engine",
    "lodash get",
    "lodash toPath",
    "lodash template",
    "microlibrary"
  ],
  "main": "dist/node/index.js",
  "bin": {
    "micromustache": "./bin/micromustache.js"
  },
  "directories": {
    "lib": "./dist/node"
  },
  "engines": {
    "node": ">=8"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/mustache": "^0.8.32",
    "@types/node": "^11.13.22",
    "chai": "^4.2.0",
    "mocha": "^6.2.1",
    "mustache": "^3.1.0",
    "pkg-ok": "^2.3.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.7.1",
    "sloc": "^0.2.1",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.4"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:amd": "tsc -p tsconfig-amd.json",
    "build:commonjs": "tsc -p tsconfig-commonjs.json",
    "build:node": "tsc -p tsconfig-node.json",
    "build": "npm run clean && npm run build:amd && npm run build:node && npm run build:commonjs",
    "docs": "typedoc",
    "lint": "tslint -p .",
    "lint:fix": "npm run lint -- --fix",
    "pretest": "npm run lint",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "preversion": "npm test && npm run build && pkg-ok",
    "prepublishOnly": "npm run test && npm run build && pkg-ok",
    "postversion": "git push && git push --tags",
    "api-extractor": "api-extractor run --local",
    "sloc": "sloc src -e .*spec.* -k source --format cli-table"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/userpixel/micromustache.git"
  },
  "author": "Alex Ewerl√∂f",
  "license": "MIT",
  "dependencies": {}
}
