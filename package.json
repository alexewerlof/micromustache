{
  "name": "micromustache",
  "version": "7.0.0-0",
  "description": "A fast, minimal and secure template engine for JavaScript",
  "keywords": [
    "template",
    "mustache",
    "string processing",
    "string interpolation",
    "template engine",
    "lodash get",
    "lodash toPath",
    "lodash template",
    "microlibrary"
  ],
  "types": "dist/types/index.d.ts",
  "type": "commonjs",
  "main": "dist/micromustache.js",
  "module": "dist/micromustache.mjs",
  "directories": {
    "bin": "./bin",
    "lib": "./dist"
  },
  "engines": {
    "node": ">=8"
  },
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@types/mustache": "^4.0.1",
    "@types/node": "^13.7.7",
    "jest": "^25.1.0",
    "mustache": "^4.0.0",
    "pkg-ok": "^2.3.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "rollup": "^1.32.0",
    "rollup-plugin-gzip": "^2.3.0",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript": "^1.0.1",
    "sloc": "^0.2.1",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.16.11",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "npm run clean && npm run build:types && rollup --config",
    "docs": "typedoc src/",
    "lint": "tslint -p .",
    "lint:fix": "npm run lint -- --fix",
    "pretest": "npm run lint",
    "test": "jest",
    "preversion": "npm test && npm run build && pkg-ok",
    "prepublishOnly": "npm run test && npm run build && pkg-ok",
    "postversion": "git push && git push --tags",
    "api-extractor": "api-extractor run --local",
    "sloc": "sloc src -e .*spec.* -k source --format cli-table"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/userpixel/micromustache.git"
  },
  "funding": "https://github.com/userpixel/micromustache/blob/master/.github/FUNDING.yml",
  "author": "Alex Ewerl√∂f",
  "license": "MIT"
}
