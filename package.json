{
  "name": "micromustache",
  "version": "7.1.0",
  "description": "A fast, minimal and secure template engine for JavaScript",
  "keywords": [
    "template",
    "mustache",
    "string processing",
    "string interpolation",
    "template engine",
    "lodash get",
    "lodash toPath",
    "lodash template",
    "microlibrary"
  ],
  "types": "dist/types/index.d.ts",
  "type": "commonjs",
  "main": "dist/micromustache.js",
  "module": "dist/micromustache.mjs",
  "directories": {
    "bin": "./bin",
    "example": "examples",
    "lib": "./dist"
  },
  "engines": {
    "node": ">=8"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^3.1.1",
    "@types/jest": "^25.2.3",
    "@types/mustache": "^4.0.1",
    "@types/node": "^13.13.14",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^6.8.0",
    "jest": "^25.5.4",
    "mustache": "^4.0.1",
    "pkg-ok": "^2.3.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.21.0",
    "rollup-plugin-terser": "^5.3.0",
    "sloc": "^0.2.1",
    "ts-jest": "^25.5.1",
    "ts-node": "^8.10.2",
    "tslib": "^1.13.0",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.6"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types -p tsconfig-types.json",
    "build:ts": "rollup --config",
    "build": "npm run clean && npm run build:types && rollup --config && ./dist-test.sh && npm run test:examples",
    "docs": "typedoc src/",
    "lint": "eslint --ext .ts src",
    "lint:fix": "npm run lint -- --fix",
    "pretest": "npm run lint",
    "test": "jest",
    "test:examples": "for i in examples/*.js;do node \"$i\";done",
    "preversion": "npm test && npm run build && pkg-ok",
    "prepublishOnly": "npm run test && npm run build && pkg-ok",
    "postversion": "git push && git push --tags",
    "api-extractor": "api-extractor run --local",
    "sloc": "sloc src -e .*spec.* -k source --format cli-table"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/userpixel/micromustache.git"
  },
  "funding": "https://github.com/userpixel/micromustache/blob/master/.github/FUNDING.yml",
  "author": "Alex Ewerl√∂f",
  "license": "MIT"
}
