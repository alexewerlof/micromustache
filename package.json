{
  "name": "micromustache",
  "version": "5.4.0",
  "description": "A faster and smaller subimplementation of the {{mustache}} template engine for JavaScript",
  "keywords": [
    "template",
    "mustache",
    "string processing",
    "string interpolation",
    "template engine",
    "lodash get",
    "microlibrary"
  ],
  "main": "lib/index.js",
  "types": "./lib/types.d.ts",
  "bin": {
    "micromustache": "./bin/micromustache"
  },
  "directories": {
    "lib": "./lib"
  },
  "engines": {
    "node": ">=8"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^6.3.0",
    "@types/node": "^10.12.23",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "mustache": "^3.0.1",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3",
    "api-extractor": "api-extractor run --local"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf lib",
    "pretest": "npm run lint",
    "lint": "tslint -p .",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "preversion": "npm test",
    "prepare": "npm run test && npm run build",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/userpixel/micromustache.git"
  },
  "author": "Alex Ewerl√∂f",
  "license": "MIT",
  "dependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5"
  }
}
